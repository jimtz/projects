<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/powerBtn"
        android:layout_width="184dp"
        android:layout_height="154dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027"
        app:srcCompat="@drawable/red_power" />

    <TextView
        android:id="@+id/text"
        android:layout_width="355dp"
        android:layout_height="177dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:textColor="#000000"
        android:textColorLink="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/powerBtn"
        app:layout_constraintVertical_bias="0.0"

        />

    <ImageButton
        android:id="@+id/therm"
        android:layout_width="132dp"
        android:layout_height="124dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/sofa"
        app:layout_constraintEnd_toStartOf="@+id/furn"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"

        app:layout_constraintVertical_bias="0.142" />

    <ImageButton
        android:id="@+id/furn"
        android:layout_width="106dp"
        android:layout_height="118dp"
        android:background="#FFFFFF"
        android:contentDescription="TODO"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/sofa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"


        app:layout_constraintVertical_bias="0.314" />

    <ImageButton
        android:id="@+id/bathroom"
        android:layout_width="108dp"
        android:layout_height="121dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/bed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintVertical_bias="0.07" />

    <ImageButton
        android:id="@+id/bed"
        android:layout_width="120dp"
        android:layout_height="108dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/therm"
        app:layout_constraintVertical_bias="0.397" />

    <ImageButton
        android:id="@+id/sofa"
        android:layout_width="130dp"
        android:layout_height="116dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintVertical_bias="0.588" />

    <ImageButton
        android:id="@+id/kitchen"
        android:layout_width="106dp"
        android:layout_height="119dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/sofa"
        app:layout_constraintEnd_toStartOf="@+id/sofa"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toEndOf="@+id/bed"
        app:layout_constraintTop_toBottomOf="@+id/therm"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/clock"
        android:layout_width="125dp"
        android:layout_height="72dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.97"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sofa"
        app:layout_constraintVertical_bias="0.788"
        app:srcCompat="@drawable/clock" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="99dp"
        android:layout_height="69dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/clock"
        app:layout_constraintHorizontal_bias="0.196"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bed"
        app:layout_constraintVertical_bias="0.741"
        app:srcCompat="@drawable/energy" />

    <ImageButton
        android:id="@+id/record"
        android:layout_width="75dp"
        android:layout_height="59dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/clock"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toEndOf="@+id/settings"
        app:layout_constraintTop_toBottomOf="@+id/kitchen"
        app:layout_constraintVertical_bias="0.78"
        app:srcCompat="@drawable/record" />


</androidx.constraintlayout.widget.ConstraintLayout>


